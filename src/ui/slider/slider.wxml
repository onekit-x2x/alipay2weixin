<slider
  class="onekit-slider {{onekitClass}}"
  style="{{onekitStyle}}"
  id="{{onekitId}}"

  name="{{name}}"
  min="{{min}}"
  max="{{max}}"
  step="{{step}}"
  disabled="{{disabled}}"
  value="{{value}}"
  activeColor="{{activeColor}}"
  backgroundColor="{{backgroundColor}}"
  block-size="{{handleSize}}"
  block-color="{{trackColor}}"
  show-value="{{handleColor}}"

  bindchange="slider_change"
  bindchanging="slider_changing"
>
<slot></slot>
</slider>
