<view  class="page">
  <view  class="page-description">用户截屏事件 API</view>
  <view  class="page-section">
    <view  class="page-section-title">my.onUserCaptureScreen</view>
    <view  class="page-section-demo">
      <view >目前状态：{{ condition ? "已经开启监听" : '已经取消监听' }}</view>
      <view  wx:if="{{condition}}">
        <onekit_button  type="primary" bindtap="offUserCaptureScreen">取消监听屏幕事件</onekit_button>
      </view>
      <view  wx:else>
        <onekit_button  type="primary" bindtap="onUserCaptureScreen">开启监听屏幕事件</onekit_button>
      </view>
    </view>
  </view>
</view>