<view  class="page">
  <view  class="page-description">蓝牙 API</view>
  <view  class="page-section">
    <view  class="page-section-title">本机蓝牙开关状态</view>
    <view  class="page-section-demo">
       <onekit-button  type="primary" bindtap="openBluetoothAdapter">初始化蓝牙</onekit-button>
       <onekit-button  type="primary" bindtap="closeBluetoothAdapter">关闭本机蓝牙</onekit-button>
       <onekit-button  type="primary" bindtap="getBluetoothAdapterState">获取蓝牙状态</onekit-button>
    </view>

    <view  class="page-section-title">扫描蓝牙设备</view>
    <view  class="page-section-demo">
       <onekit-button  type="primary" bindtap="startBluetoothDevicesDiscovery">开始搜索</onekit-button>
       <onekit-button  type="primary" bindtap="getBluetoothDevices">所有搜索到的设备</onekit-button>
       <onekit-button  type="primary" bindtap="getConnectedBluetoothDevices">所有已连接的设备</onekit-button>
       <onekit-button  type="primary" bindtap="stopBluetoothDevicesDiscovery">停止搜索</onekit-button>
    </view>

    <view  class="page-section-title">连接设备</view>
    <view  class="page-section-demo">
       <input  class="input" bindinput="bindKeyInput" type="{{text}}" placeholder="输入要连接的设备的deviceId"></input>
       <onekit-button  type="primary" bindtap="connectBLEDevice">连接设备</onekit-button>
       <onekit-button  type="primary" bindtap="getBLEDeviceServices">获取设备服务</onekit-button>
       <onekit-button  type="primary" bindtap="getBLEDeviceCharacteristics">获取读写特征</onekit-button>
       <onekit-button  type="primary" bindtap="disconnectBLEDevice">断开设备连接</onekit-button>
    </view>

     <view  class="page-section-title">读写数据</view>
     <view  class="page-section-demo">
       <onekit-button  type="primary" bindtap="notifyBLECharacteristicValueChange">监听特征值数据变化</onekit-button>
       <onekit-button  type="primary" bindtap="readBLECharacteristicValue">读取数据</onekit-button>
       <onekit-button  type="primary" bindtap="writeBLECharacteristicValue">写入数据</onekit-button>
       <onekit-button  type="primary" bindtap="offBLECharacteristicValueChange">取消特征值监听</onekit-button>
    </view>

     <view  class="page-section-title">其他事件</view>
     <view  class="page-section-demo">
       <onekit-button  type="primary" bindtap="bluetoothAdapterStateChange">本机蓝牙状态变化</onekit-button>
       <onekit-button  type="primary" bindtap="offBluetoothAdapterStateChange">取消本机蓝牙状态监听</onekit-button>
       <onekit-button  type="primary" bindtap="BLEConnectionStateChanged">蓝牙连接状态变化</onekit-button>
       <onekit-button  type="primary" bindtap="offBLEConnectionStateChanged">取消蓝牙连接状态监听</onekit-button>
       
    </view>

  </view>
</view>