<view  class="page">
  <view  class="page-description">图片</view>
  <view  class="page-section" wx:for="{{array}}" wx:key="item" wx:for-item="item">
    <view  class="page-section-title">{{item.text}}</view>
    <view  class="page-section-demo" bindtap="onTap">
      <image  class="image" data-name="{{item.mode}}" bindtap="onTap" mode="{{item.mode}}" src="{{src}}" binderror="imageError" bindload="imageLoad"></image>
    </view>
  </view>
</view>
