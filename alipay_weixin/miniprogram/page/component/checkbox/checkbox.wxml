<view  class="page">
  <view  class="page-description">多项选择器</view>
  <onekit-form  bindsubmit="onSubmit" bindreset="onReset">
    <view  class="page-section">
      <view  class="page-section-title">选择你用过的框架：</view>
      <view  class="page-section-demo">
        <onekit-checkbox-group  bindchange="onChange" name="libs">
          <onekit-label  class="checkbox" wx:for="{{items}}" wx:key="item" key="label-{{index}}">
            <onekit-checkbox  value="{{item.name}}" checked="{{item.checked}}" disabled="{{item.disabled}}"></onekit-checkbox>
            <text  class="checkbox-text">{{item.value}}</text>
          </onekit-label>
        </onekit-checkbox-group>
      </view>
      <view  class="page-section-btns">
        <view ><onekit-button  type="ghost" size="mini" formType="reset">reset</onekit-button></view>
        <view ><onekit-button  type="primary" size="mini" formType="submit">submit</onekit-button></view>
      </view>
    </view>
  </onekit-form>
</view>
