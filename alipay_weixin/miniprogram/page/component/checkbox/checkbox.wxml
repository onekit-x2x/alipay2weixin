<view  class="page">
  <view  class="page-description">多项选择器</view>
  <form  bindsubmit="onSubmit" bindreset="onReset">
    <view  class="page-section">
      <view  class="page-section-title">选择你用过的框架：</view>
      <view  class="page-section-demo">
        <checkbox-group  bindchange="onChange" name="libs">
          <label  class="checkbox" wx:for="{{items}}" wx:key="item" key="label-{{index}}">
            <onekit_checkbox  value="{{item.name}}" checked="{{item.checked}}" disabled="{{item.disabled}}"></onekit_checkbox>
            <text  class="checkbox-text">{{item.value}}</text>
          </label>
        </checkbox-group>
      </view>
      <view  class="page-section-btns">
        <view ><onekit_button  type="ghost" size="mini" formType="reset">reset</onekit_button></view>
        <view ><onekit_button  type="primary" size="mini" formType="submit">submit</onekit_button></view>
      </view>
    </view>
  </form>
</view>
