<view  class="page">
  <view  class="page-description">单选框</view>
  <view  class="page-section">
    <view  class="section section_gap">
      <onekit-form  bindsubmit="onSubmit" bindreset="onReset">
        <view  class="page-section-demo">
          <onekit-radio-group  class="radio-group" bindchange="radioChange" name="lib">
            <onekit-label  class="radio" wx:for="{{items}}" wx:key="item" key="label-{{index}}">
              <onekit-radio  value="{{item.name}}" checked="{{item.checked}}" disabled="{{item.disabled}}"></onekit-radio>
              <text  class="radio-text">{{item.value}}</text>
            </onekit-label>
          </onekit-radio-group>
        </view>
        <view  class="page-section-btns">
          <view ><onekit-button  size="mini" type="ghost" formType="reset">reset</onekit-button></view>
          <view ><onekit-button  size="mini" type="primary" formType="submit">submit</onekit-button></view>
        </view>
      </onekit-form>
    </view>
  </view>
</view>
