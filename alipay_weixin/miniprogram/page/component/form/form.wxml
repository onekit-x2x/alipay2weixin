<onekit-view  onekitClass="page">
  <onekit-view  onekitClass="page-description">表单</onekit-view>
  <form  bindsubmit="onSubmit" bindreset="onReset">
    <onekit-view  onekitClass="page-section">
      <onekit-view  onekitClass="page-section-title">Slider</onekit-view>
      <onekit-view  onekitClass="page-section-demo">
        <onekit-slider  value="80" name="slider" show-value></onekit-slider>
      </onekit-view>
    </onekit-view>
    <onekit-view  onekitClass="page-section">
      <onekit-view  onekitClass="form-row">
        <onekit-view  onekitClass="form-row-label">Switch</onekit-view>
        <onekit-view  onekitClass="form-row-content" style="text-align: right">
          <onekit-switch name="switch"></onekit-switch>
          <onekit-checkbox name="check"></onekit-checkbox>
        </onekit-view>
      </onekit-view>
      <onekit-view  onekitClass="form-line"></onekit-view>
      <onekit-view  onekitClass="form-row">
        <onekit-view  onekitClass="form-row-label">Input</onekit-view>
        <onekit-view  onekitClass="form-row-content">
          <onekit-input  name="input" onekitClass="input" placeholder="input something"></onekit-input>
        </onekit-view>
      </onekit-view>
    </onekit-view>
    <onekit-view  onekitClass="page-section">
      <onekit-view  onekitClass="page-section-title">Radio</onekit-view>
      <onekit-view  onekitClass="page-section-demo">
        <onekit-radio-group  name="radio-group">
          <onekit-label ><onekit-radio  value="radio1"></onekit-radio>radio1</onekit-label>
          <onekit-label ><onekit-radio  value="radio2"></onekit-radio>radio2</onekit-label>
        </onekit-radio-group>
      </onekit-view>
    </onekit-view>
    <onekit-view  onekitClass="page-section">
      <onekit-view  onekitClass="page-section-title">Checkbox</onekit-view>
      <onekit-view  onekitClass="page-section-demo">
        <onekit-checkbox-group  name="checkbox">
          <onekit-label ><onekit-checkbox  value="checkbox1"></onekit-checkbox>checkbox1</onekit-label>
          <onekit-label ><onekit-checkbox  value="checkbox2"></onekit-checkbox>checkbox2</onekit-label>
        </onekit-checkbox-group>
      </onekit-view>
      <onekit-view  onekitClass="page-section-btns">
        <onekit-view ><button  type="ghost" size="mini" formType="reset">Reset</button></onekit-view>
        <onekit-view ><button  type="primary" size="mini" formType="submit">Submit</button></onekit-view>
      </onekit-view>
    </onekit-view>
  </form>
</onekit-view>