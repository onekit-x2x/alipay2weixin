<onekit-view  Class="page">
  <onekit-view  Class="page-description">输入框</onekit-view>
  <onekit-view  Class="page-section">
    <onekit-view  Class="form-row">
      <onekit-view  Class="form-row-label">受控聚焦</onekit-view>
      <onekit-view  Class="form-row-content">
        <onekit-input  Class="input" focus="{{focus}}" bindfocus="onFocus" bindblur="onBlur" placeholder="input something"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view  Class="page-section-btns">
      <onekit-button  size="mini" bindtap="bindButtonTap">聚焦</onekit-button>
    </onekit-view>
  </onekit-view>
  <onekit-view  Class="page-section">
    <onekit-view  Class="form-row">
      <onekit-view  Class="form-row-label"><onekit-label  for="controlled">显示输入</onekit-label></onekit-view>
      <onekit-view  Class="form-row-content">
        <onekit-input  Class="input" id="controlled" bindinput="bindKeyInput" placeholder="show input content"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view  Class="extra-info">你输入的是：{{inputValue}}</onekit-view>
  </onekit-view>
  <onekit-view  Class="page-section">
    <onekit-view  Class="form-row">
      <onekit-view  Class="form-row-label">最大长度</onekit-view>
      <onekit-view  Class="form-row-content">
        <onekit-input  Class="input" maxlength="10" placeholder="maxlength 10"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view  Class="form-line"></onekit-view>
    <onekit-view  Class="form-row">
      <onekit-view  Class="form-row-label">收起键盘</onekit-view>
      <onekit-view  Class="form-row-content">
        <onekit-input  Class="input" bindinput="bindHideKeyboard" placeholder="输入 123 自动收起键盘"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view  Class="form-line"></onekit-view>
    <onekit-view  Class="form-row">
      <onekit-view  Class="form-row-label">输入密码</onekit-view>
      <onekit-view  Class="form-row-content">
        <onekit-input  Class="input" password type="text" placeholder="密码输入框"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view  Class="form-line"></onekit-view>
    <onekit-view  Class="form-row">
      <onekit-view  Class="form-row-label">输入数字</onekit-view>
      <onekit-view  Class="form-row-content">
        <onekit-input  Class="input" type="number" placeholder="数字输入框"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view  Class="form-line"></onekit-view>
    <onekit-view  Class="form-row">
      <onekit-view  Class="form-row-label">小数点键盘</onekit-view>
      <onekit-view  Class="form-row-content">
        <onekit-input  Class="input" type="digit" placeholder="带小数点的数字键盘"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view  Class="form-line"></onekit-view>
    <onekit-view  Class="form-row">
      <onekit-view  Class="form-row-label">身份证键盘</onekit-view>
      <onekit-view  Class="form-row-content">
        <onekit-input  Class="input" type="idcard" placeholder="身份证输入键盘"></onekit-input>
      </onekit-view>
    </onekit-view>
  </onekit-view>


  <onekit-view  Class="page-section">
    <onekit-view  Class="page-section-title">搜索框</onekit-view>
    <onekit-view  Class="page-section-demo">
      <onekit-view  Class="search-outer">
        <onekit-input  Class="search-input" placeholder="搜索" value="{{search}}" bindconfirm="doneSearch" bindinput="handleSearch"></onekit-input>
        <text  Class="search-cancel" bindtap="clearSearch">取消</text>
      </onekit-view>
    </onekit-view>
  </onekit-view>
</onekit-view>
