<onekit-view  Class="page">
  <onekit-view  Class="page-description">滑块</onekit-view>
  <onekit-view  Class="page-section">
    <onekit-view  Class="page-section-title">设置step</onekit-view>
    <onekit-view  Class="page-section-demo">
      <onekit-slider  value="5" bindChange="slider2change" step="5"></onekit-slider>
    </onekit-view>
  </onekit-view>

  <onekit-view  Class="page-section">
    <onekit-view  Class="page-section-title">设置最小/最大值范围</onekit-view>
    <onekit-view  Class="page-section-demo">
      <onekit-slider  value="33" bindChange="slider4change" min="25" max="50" show-value></onekit-slider>
    </onekit-view>
  </onekit-view>

  <onekit-view  Class="page-section">
    <onekit-view  Class="page-section-title">自定义样式</onekit-view>
    <onekit-view  Class="page-section-demo">
      <onekit-slider  value="33" bindChange="slider4change" min="25" max="50" show-value backgroundColor="#FFAA00" activeColor="#00aaee" trackSize="2" handleSize="6" handleColor="blue"></onekit-slider>
    </onekit-view>
  </onekit-view>
</onekit-view>
