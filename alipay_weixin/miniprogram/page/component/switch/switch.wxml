<onekit-view  onekitClass="page">
  <onekit-view  onekitClass="page-description">开关</onekit-view>
  <onekit-view  onekitClass="page-section">
    <onekit-view  onekitClass="page-section-demo switch-list">
      <onekit-view  onekitClass="switch-item">
        <onekit-switch  checked bindChange="switch1Change" aria-label="{{switch1 ? 'switch opened' : 'switch closed'}}"></onekit-switch>
      </onekit-view>
      <onekit-view  onekitClass="switch-item">
        <onekit-switch  bindChange="switch2Change"></onekit-switch>
      </onekit-view>
      <onekit-view  onekitClass="switch-item">
        <onekit-switch  color="red" checked></onekit-switch>
      </onekit-view>
    </onekit-view>
  </onekit-view>
</onekit-view>
