
<view  class="page">
  <view  class="page-description">文本框</view>
  <view  class="page-section">
    <view  class="page-section-title">受控聚焦</view>
    <view  class="page-section-demo">
      <textarea  focus="{{focus}}" bindfocus="onFocus" bindblur="onBlur" placeholder="Please input something"></textarea>
    </view>
    <view  class="page-section-btns">
      <onekit_button  type="default" size="mini" bindtap="bindButtonTap">聚焦</onekit_button>
    </view>
  </view>
  <view  class="page-section">
    <view  class="page-section-title">自适应高度</view>
    <view  class="page-section-demo">
      <textarea  bindblur="bindTextAreaBlur" auto-height placeholder="Please input something"></textarea>
    </view>
  </view>

  <view  class="page-section">
    <view  class="page-section-title">结合表单</view>
    <form  bindsubmit="bindFormSubmit">
      <view  class="page-section-demo">
        <textarea  name="textarea" placeholder="Please input something"></textarea>
      </view>
      <view  class="page-section-btns">
        <onekit_button  form-type="submit" size="mini" type="primary">提交</onekit_button>
      </view>  
    </form>
  </view>
</view>
