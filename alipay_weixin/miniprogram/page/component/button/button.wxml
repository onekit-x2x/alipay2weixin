<view  class="page">
  <view  class="page-description">按钮</view>
  <view  class="page-section">
    <view  class="page-section-title">type-primary/ghost</view>
    <view  class="page-section-demo">
      <onekit_button  type="primary">主要操作 Normal</onekit_button>
      <onekit_button  type="primary" loading>操作</onekit_button>
      <onekit_button  type="primary" disabled>主要操作 Disable</onekit_button>
      <onekit_button  type="ghost">ghost操作</onekit_button>
      <onekit_button  type="ghost" loading>ghost操作</onekit_button>
      <onekit_button  type="ghost" disabled>ghost操作 Disable</onekit_button>
    </view>
  </view>
  <view  class="page-section">
    <view  class="page-section-title">type-default</view>
    <view  class="page-section-demo">
      <onekit_button  data-aspm-click="xxx">辅助操作 Normal</onekit_button>
      <onekit_button  disabled>辅助操作 Disable</onekit_button>
    </view>
  </view>
  <view  class="page-section">
    <view  class="page-section-title">type-warn</view>
    <view  class="page-section-demo">
      <onekit_button  type="warn">警告类操作 Normal</onekit_button>
      <onekit_button  type="warn" disabled>警告类操作 Disable</onekit_button>
      <onekit_button  type="warn" hover-class="red">hover-red</onekit_button>
    </view>
  </view>
  <view  class="page-section">
    <view  class="page-section-title">Size</view>
    <view  class="page-section-demo">
      <onekit_button  size="mini" loading>提交</onekit_button>
      <onekit_button  style="margin-left: 10px;" type="primary" size="mini">选项</onekit_button>
    </view>
  </view>
  <view  class="page-section">
    <view  class="page-section-title">open</view>
    <view  class="page-section-demo">
      <onekit_button  open-type="share">share</onekit_button>
    </view>
  </view>
  <view  class="page-section">
    <view  class="page-section-title">Form</view>
    <view  class="page-section-demo">
      <form  bindsubmit="onSubmit" bindreset="onReset">
        <onekit_button  form-type="submit" type="primary">submit</onekit_button>
        <onekit_button  form-type="reset">reset</onekit_button>
      </form>
    </view>
  </view>
</view>

